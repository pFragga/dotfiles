#!/bin/sh
#
# ~/.aliasrc
# Shell aliases.

# Run as root
alias pacman="sudo pacman"
alias sv="sudo nvim"
alias sr="sudo ranger"

# Add color
alias grep="grep --color=auto"
alias watch="watch -c"

# Verbose output
alias mv="mv -v"
alias cp="cp -v"
alias rm="rm -v"
alias mkd="mkdir -v"
alias chmod="chmod -v"
alias ln="ln -v"
alias pkill="pkill -e"
alias killall="killall -v"
alias stow="stow -v"

# Human readable output
alias ls="ls -hN --color=auto --group-directories-first"
alias df="df -h"
alias du="du -h"

# Abbreviations
alias ll="ls -l"
alias v="nvim"
alias vim="nvim"
alias r="ranger"
alias nf="neofetch"

# Edit configuration files on the fly
alias cfa="$EDITOR $HOME/.aliasrc"
alias cfb="$EDITOR $HOME/.bashrc"
alias cfv="$EDITOR $XDG_CONFIG_HOME/nvim"
alias cfr="$EDITOR $XDG_CONFIG_HOME/ranger"
alias cfm="$EDITOR $XDG_CONFIG_HOME/mpd"
alias cfn="$EDITOR $XDG_CONFIG_HOME/ncmpcpp"
alias cfz="$EDITOR $XDG_CONFIG_HOME/zathura"
alias cfd="$EDITOR $XDG_CONFIG_HOME/dunst/dunstrc"
alias cfs="$EDITOR $XDG_CONFIG_HOME/sxhkd/sxhkdrc"
alias cfx="$EDITOR $XDG_CONFIG_HOME/X11"
alias cff="$EDITOR $XDG_CONFIG_HOME/fontconfig"
alias cfgtk="$EDITOR -p $XDG_CONFIG_HOME/gtk-"*

# Directory shortcuts
alias aueb="source $HOME/.scripts/aueb"
alias src="source $HOME/.scripts/src"

# Git
alias gs="git status"

# Etc
alias bright="cat /sys/class/backlight/*/brightness"
alias wget="wget --hsts-file=$XDG_DATA_HOME/wget-hsts"
