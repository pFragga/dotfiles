super + w
	"$BROWSER"

super + shift + r
	"$READER"

super + e
	thunderbird

super + shift + i
	"$TERMINAL" -e htop

super + r
	"$TERMINAL" -e ranger

super + n
	"$TERMINAL" -e ncmpcpp

super + g
	"$TERMINAL" -e glow "$HOME/Documents/Markdown"

XF86MonBrightness{Up,Down}
	brightnessctl s {+10%,10%-} -q

XF86Audio{RaiseVolume,LowerVolume,Mute}
	pamixer -{i,d,t} 5

XF86Audio{Next,Prev,Play}
	mpc {next,prev,toggle}

super + F1
	usbmnt

super + F2
	usbumnt

Print
	shotgun && notify-send "shotgun" "Captured entire screen."

super + Print
	shotgun -g $(hacksaw) && notify-send "shotgun" \
		"Captured selected area on screen."

super + Insert
	screenkey

super + shift + l
	slock

super + space
	chkb

super + x
	synclient TouchpadOff=0

super + shift + x
	synclient TouchpadOff=1
