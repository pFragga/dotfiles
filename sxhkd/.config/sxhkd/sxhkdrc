super + w
	"$BROWSER"

# This gets set by acpid
#XF86MonBrightness{Up,Down}
#	brightnessctl -q set {+10%,10%-}

XF86Audio{RaiseVolume,LowerVolume,Mute}
	pamixer -{i 10,d 10,t}

XF86Audio{Next,Prev,Play}
	mpc -q {next,prev,toggle}

super + Print
	maim "$HOME/Pictures/Screenshots/maim_$(date +'%s_%F').png" \
		&& notify-send "main" "Captured entire screen"

super + shift + Print
	maim -s "$HOME/Pictures/Screenshots/maim_$(date +'%s_%F').png" \
		&& notify-send "main" "Captured selected area on screen"

super + shift + l
	[ "$(pidof xautolock)" ] && xautolock -locknow || slock

super + space
	[ "$(setxkbmap -query | grep us)" ] && setxkbmap gr || setxkbmap us

super + x
	synclient TouchpadOff=0
super + shift + x
	synclient TouchpadOff=1
